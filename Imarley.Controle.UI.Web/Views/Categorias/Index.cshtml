@model IEnumerable<CategoriaViewModel>

@{
    ViewBag.Title = "Lista de categorias";
}


<div class="ajuste-top title">
    <div><i class="fa fa-table"></i> Lista de Categorias </div>
</div>

<div>@Html.ActionLink("Adicionar Nova", "Create")</div>

<br/>

<div class="table-responsive table-responsive-specific">
    <table class="table table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })"><i class="fa fa-lg fa-edit"></i></a> |
                        <a href="@Url.Action("Delete", new { id = item.Id })"><i class="fa fa-lg fa-remove"></i></a>
                    </td>
                </tr>
            }

        </table>
</div>