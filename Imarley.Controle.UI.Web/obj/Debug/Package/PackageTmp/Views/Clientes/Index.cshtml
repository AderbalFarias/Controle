@model IEnumerable<ClienteViewModel>

@{
    ViewBag.Title = "Lista de clientes";
}

<div class="ajuste-top title">
    <div><i class="fa fa-table"></i> Lista de Clientes </div>
</div>

<div>@Html.ActionLink("Adicionar Novo", "Create")</div>

<br />

<div class="table-responsive table-responsive-specific">
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataCadastro)
                </td>

                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })"><i class="fa fa-lg fa-edit"></i></a> | 
                    <a href="@Url.Action("Delete", new { id = item.Id })"><i class="fa fa-lg fa-remove"></i></a>
                </td>
            </tr>
        }

    </table>
</div>